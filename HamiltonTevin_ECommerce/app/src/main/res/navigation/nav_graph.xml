<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/productFragment">

    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.hamiltontevin_ecommerce.fragments.ProductFragment"
        android:label="ProductFragment"
        tools:layout="@layout/product_fragment">
        <action
            android:id="@+id/action_productFragment_to_productDetail"
            app:destination="@id/productDetail" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.hamiltontevin_ecommerce.fragments.ProductFragment"
        android:label="CartFragment"
        tools:layout="@layout/cart_fragment"
        />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.hamiltontevin_ecommerce.fragments.ProductFragment"
        android:label="accountFragment"
        tools:layout="@layout/account_fragment"
        />

    <fragment
        android:id="@+id/productDetail"
        android:name="com.example.hamiltontevin_ecommerce.fragments.ProductFragment"
        android:label="ProductDetail"
        tools:layout="@layout/product_detail_fragment"
        />


</navigation>